<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/dor"
        style="@style/Dorama"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingStart="2dp"
        />

    <ImageView
        android:id="@+id/check"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="@+id/dor"
        app:layout_constraintRight_toRightOf="@id/dor"
        app:layout_constraintTop_toTopOf="@id/dor"
        app:layout_constraintBottom_toBottomOf="@+id/dor"
        android:src="@drawable/ic_check"
        />

    <ImageView
        android:id="@+id/img"
        app:layout_constraintBottom_toBottomOf="@+id/dor"
        app:layout_constraintLeft_toLeftOf="@id/dor"
        app:layout_constraintTop_toTopOf="@id/dor"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/aos"
        />


</androidx.constraintlayout.widget.ConstraintLayout>